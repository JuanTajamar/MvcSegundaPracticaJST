@model List<Comic>
<h1>COMICS MOLONES</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>IMAGEN</th>
            <th>DESCRIPCION</th>
            <th>ACCIONES</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Comic cmc in Model)
        {
            <tr>
                <td>@cmc.IdComic</td>
                <td>@cmc.Nombre</td>
                <td><img src="@cmc.Imagen" style="height:150px; width:150px"/></td>
                <td>@cmc.Descripcion</td>
                <td>
                    <a asp-controller="Comics" asp-action="Details" asp-route-id="@cmc.IdComic" class="btn btn-info">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>